<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.hp.railwaymanager.ContributeActivity">
    <EditText
        android:id="@+id/answer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:imeOptions="actionDone"
        android:singleLine="true"

        android:hint="Original Address name"


        />
    <EditText
        android:id="@+id/answer2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:imeOptions="actionDone"
        android:singleLine="true"

        android:hint="Adderess name on Google Map"


        />

    <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/btcontribute"
        android:text="CONTRIBUTE"
        android:onClick="contributeClicked"
       />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtcon"
        />


</LinearLayout>
