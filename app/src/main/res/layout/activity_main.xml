<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/home1"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:weightSum="15"
        android:orientation="vertical">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     Train  Schedule     "
            android:textColor="@color/purple"
            android:layout_weight="1"
            android:onClick="timeScheduleClicked"
            android:id="@+id/button1"


            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     Ticket           Fare     "

            android:layout_weight="1"
            android:textColor="@color/purple"
            android:onClick="ticketFareClicked"
            android:id="@+id/button2"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Purchase   Ticket   "

            android:layout_weight="1"
            android:textColor="@color/purple"
            android:id="@+id/button3"
            android:onClick="purchaseTicketClicked"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/purple"
            android:layout_weight="1"

            android:text="          Track Train        "
            android:id="@+id/button4"
            android:onClick="trackTrainClicked"

            />





    </LinearLayout>
    <Button
        android:layout_width="wrap_content"


        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/purple"
        android:text="About us"
        android:onClick="aboutusClicked"
        android:background="@drawable/buton"
        android:layout_alignParentBottom="true"

        />

</RelativeLayout>
